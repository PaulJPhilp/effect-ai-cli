{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "composite": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "scripts/**",
    "node_modules/**",
    "dist/**"
  ]
}
